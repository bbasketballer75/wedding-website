#!/usr/bin/env sh

echo "🔍 Running fast changed tests (frontend/backend) — non-blocking..."
npm run test:frontend:changed || true
npm run test:backend:changed || true

echo "🚿 Running smoke test suite (frontend/backend)..."
npm run test:smoke || exit 1

echo "🏗️  Building bundle (fast mode for local pre-push)..."
npm run build:fast || exit 1

echo "✅ Pre-push checks passed. Proceeding with push."
